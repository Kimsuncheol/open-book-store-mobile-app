{
  "expo": {
    "name": "openbookstore",
    "slug": "openbookstore",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/scribd_logo_2.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/scribd_logo_splash.png",
      "dark": {
        "image": "./assets/scribd_logo_darkmode.png",
        "resizeMode": "cover",
        "backgroundColor": "#000000"
      },
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.openbookstore.app",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice input to search and chat.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to convert your voice to text."
      }
    },
    "android": {
      "package": "com.openbookstore.app",
      "googleServicesFile": "./google-services.json",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/scribd_logo_splash.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "backgroundColor": "#ffffff",
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/scribd_logo_2.png"
    },
    "plugins": [
      "expo-web-browser",
      "expo-build-properties",
      [
        "@jamsch/expo-speech-recognition",
        {
          "microphonePermission": "This app uses the microphone for voice input.",
          "speechRecognitionPermission": "This app uses speech recognition to convert your voice to text."
        }
      ]
    ]
  }
}
